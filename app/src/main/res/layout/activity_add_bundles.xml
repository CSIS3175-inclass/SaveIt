<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBundlesActivity">
    <FrameLayout
        android:id="@+id/frameBottomMenu"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="#d6d7d7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/txtImage"
            android:scaleType="fitCenter"
            android:src="@drawable/home_img"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:contentDescription="@string/txtImage"
            android:scaleType="fitCenter"
            android:src="@drawable/history_img" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:contentDescription="@string/txtImage"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_img" />


    </FrameLayout>

    <Button
        android:id="@+id/btnFoodBundles3"
        android:layout_width="141dp"
        android:layout_height="85dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnFoodBundles"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/frameBottomMenu"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="127dp"
        android:layout_height="86dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="15dp"
        android:text="@string/btnSave"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/frameBottomMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFoodBundles3" />

    <TextView
        android:id="@+id/lblPrice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/lblPrice"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/edTxtPrice"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/edTxtPrice"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="216dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/hintPrice"
        android:inputType="number"
        android:textColorHint="#546E7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="334dp"
        android:layout_height="176dp"
        android:layout_marginBottom="270dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/lblItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblItems"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addButton" />

    </LinearLayout>

    <TextView
        android:id="@+id/lblBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:text="@string/lblBundle"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edTxtBundleName"
        app:layout_constraintEnd_toStartOf="@+id/edTxtBundleName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edTxtBundleName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="465dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:hint="@string/hintBundleName"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#546E7A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblBundle"
        app:layout_constraintTop_toBottomOf="@+id/titleAddBundles"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addTitle"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleAddBundles" />

    <TextView
        android:id="@+id/titleAddBundles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="48dp"
        android:text="@string/txtTitle"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/edTxtBundleName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>